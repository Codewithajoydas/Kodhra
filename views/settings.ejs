            </label>
          </section>
        
          <!-- SYNC & CLOUD -->
          <section>
            <h3>Sync & Cloud</h3>
            <label>
              Cloud Sync:
              <input type="checkbox" id="cloudSync" />
            </label>
        
            <label>
              Cloud Provider:
              <select id="cloudProvider">
                <option value="none">None</option>
                <option value="github">GitHub Gist</option>
                <option value="google">Google Drive</option>
                <option value="dropbox">Dropbox</option>
              </select>
            </label>
        
            <label>
