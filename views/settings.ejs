          <!-- GENERAL -->
          <section>
            <h3>General</h3>
            <label>
              Theme:
              <select id="theme">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
                <option value="system">System Default</option>
              </select>
            </label>
        
            <label>
              Language:
              <select id="language">
                <option value="en">English</option>
                <option value="hi">Hindi</option>
                <option value="es">Spanish</option>
                <option value="fr">French</option>
              </select>
            </label>
        
            <label>
              Startup Page:
              <select id="startupPage">
                <option value="dashboard">Dashboard</option>
                <option value="snippets">My Snippets</option>
                <option value="favorites">Favorites</option>
                <option value="ai">AI Assistant</option>
              </select>
            </label>
        
            <label>
              Autosave Changes:
              <input type="checkbox" id="autosave" checked />
            </label>
        
            <label>
              Autosave Interval (sec):
              <input type="number" id="autosaveInterval" min="5" max="600" value="30" />
            </label>
        
            <label>
              Confirm Before Delete:
              <input type="checkbox" id="confirmDelete" checked />
            </label>
        
            <label>
              Enable Sound Alerts:
              <input type="checkbox" id="soundAlerts" />
            </label>
          </section>
        
          <!-- EDITOR -->
          <section>
            <h3>Editor</h3>
            <label>
              Font Family:
              <select id="editorFont">
                <option value="Fira Code">Fira Code</option>
                <option value="JetBrains Mono">JetBrains Mono</option>
                <option value="Cascadia Code">Cascadia Code</option>
                <option value="Consolas">Consolas</option>
              </select>
            </label>
        
            <label>
              Font Size:
              <input type="range" min="12" max="24" value="16" id="fontSize" />
            </label>
        
            <label>
              Tab Size:
              <input type="number" id="tabSize" value="2" min="1" max="8" />
            </label>
        
            <label>
              Indentation Style:
              <select id="indentStyle">
                <option value="spaces">Spaces</option>
                <option value="tabs">Tabs</option>
              </select>
            </label>
        
            <label>
              Line Numbers:
              <input type="checkbox" id="lineNumbers" checked />
            </label>
        
            <label>
              Word Wrap:
              <input type="checkbox" id="wordWrap" checked />
            </label>
        
            <label>
              Auto Format on Save:
              <input type="checkbox" id="autoFormat" checked />
            </label>
        
            <label>
              Highlight Active Line:
              <input type="checkbox" id="highlightActiveLine" checked />
            </label>
        
            <label>
              Auto Close Brackets:
              <input type="checkbox" id="autoBrackets" checked />
            </label>
        
            <label>
              Code Suggestions (AI):
              <input type="checkbox" id="aiSuggestions" />
            </label>
          </section>
        
          <!-- APPEARANCE -->
          <section>
            <h3>Appearance</h3>
            <label>
              Layout Style:
              <select id="layout">
                <option value="grid">Grid</option>
                <option value="list">List</option>
                <option value="compact">Compact</option>
