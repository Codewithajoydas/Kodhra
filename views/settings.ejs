            </label>
        
            <label>
              Account Sync:
              <input type="checkbox" id="accountSync" checked />
            </label>
          </section>
        
          <!-- AI & AUTOMATION -->
          <section>
            <h3>AI & Automation</h3>
            <label><input type="checkbox" id="aiTagging" /> Auto Tag Snippets by Content</label>
            <label><input type="checkbox" id="aiNaming" /> Suggest Smart Snippet Titles</label>
            <label><input type="checkbox" id="aiExplainCode" /> Explain Code with AI</label>
            <label><input type="checkbox" id="aiRefactor" /> Suggest Code Improvements</label>
            <label><input type="checkbox" id="aiSearch" /> Enable Natural Language Search</label>
          </section>
        
          <!-- PERFORMANCE -->
          <section>
            <h3>Performance</h3>
            <label><input type="checkbox" id="lazyLoad" checked /> Lazy Load Snippets</label>
            <label><input type="checkbox" id="cacheSnippets" checked /> Cache Snippets Locally</label>
            <label><input type="checkbox" id="reduceAnimations" /> Reduce Animations</label>
            <label><input type="checkbox" id="hardwareAcceleration" checked /> Enable Hardware Acceleration</label>
            <label><input type="checkbox" id="preloadLibraries" /> Preload Common Libraries</label>
          </section>
        
          <!-- PRIVACY & SECURITY -->
          <section>
            <h3>Privacy & Security</h3>
            <label><input type="checkbox" id="privateSnippets" /> Keep Snippets Private</label>
            <label><input type="checkbox" id="encryptData" /> Encrypt Local Data</label>
            <label><input type="checkbox" id="secureMode" /> Secure Mode (Disable Clipboard Access)</label>
            <label><input type="checkbox" id="deleteLogs" /> Auto Delete Activity Logs</label>
            <label><button id="clearCache">Clear Local Cache</button></label>
          </section>
        
          <!-- DEVELOPER OPTIONS -->
          <section>
            <h3>Developer</h3>
            <label><input type="checkbox" id="devMode" /> Enable Developer Mode</label>
            <label><input type="checkbox" id="debugLogs" /> Show Debug Logs</label>
            <label><input type="checkbox" id="betaFeatures" /> Enable Beta Features</label>
            <label>
              API Endpoint:
              <input type="text" id="apiEndpoint" placeholder="https://api.codewithajoydas.live" />
            </label>
            <label>
              Custom CSS:
              <textarea id="customCss" placeholder="/* Write custom CSS */"></textarea>
            </label>
            <label>
              Custom JS:
              <textarea id="customJs" placeholder="// Write custom JavaScript"></textarea>
            </label>
          </section>
        
          <!-- ACCESSIBILITY -->
          <section>
            <h3>Accessibility</h3>
            <label><input type="checkbox" id="screenReader" /> Enable Screen Reader Support</label>
            <label><input type="checkbox" id="highContrast" /> High Contrast Mode</label>
            <label><input type="checkbox" id="keyboardShortcuts" checked /> Keyboard Shortcuts</label>
            <label><input type="checkbox" id="reduceMotion" /> Reduce Motion</label>
            <label><input type="checkbox" id="colorBlindMode" /> Color-Blind Friendly Palette</label>
          </section>
        
          <!-- SAVE -->
          <button type="submit" id="saveSettings">Save Settings</button>
        </div>


