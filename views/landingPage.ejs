            display: block;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            padding: 0 20px;
        }

        /* ================= HEADER ================= */

        header {
            position: sticky;
            top: 0;
            z-index: 20;
            background: rgba(11, 13, 16, 0.85);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
        }

        .nav {
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            font-weight: 800;
            font-size: 1.4rem;
            letter-spacing: 0.5px;
        }

        nav ul {
            list-style: none;
            display: flex;
            gap: 30px;
            font-weight: 500;
            color: var(--muted);
        }

        .auth {
            display: flex;
            gap: 12px;
        }

        .btn {
            padding: 10px 18px;
            border-radius: 8px;
            border: 1px solid var(--border);
            background: transparent;
            color: var(--text);
            cursor: pointer;
            font-weight: 500;
        }

        .btn.primary {
            background: var(--accent);
            border-color: var(--accent);
        }

        /* ================= HERO ================= */

        .hero {
            padding: 120px 0 140px;
            text-align: center;
            position: relative;
        }

        .hero h1 {
            font-size: clamp(2.6rem, 5vw, 4.2rem);
            line-height: 1.1;
            font-weight: 800;
            margin-bottom: 20px;
        }

        .hero h1 span {
            background: linear-gradient(90deg, #818cf8, #4f46e5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .hero p {
            max-width: 720px;
            margin: auto;
            color: var(--muted);
            font-size: 1.15rem;
        }

        .hero-actions {
            margin-top: 40px;
            display: flex;
            justify-content: center;
            gap: 16px;
        }

        .hero-preview {
            margin-top: 80px;
            position: relative;
            perspective: 1000px;
        }

        .hero-preview img {
            /* box-shadow: 0 40px 120px rgba(0, 0, 0, 0.6); */
            transform: rotateX(10deg);
        }

        /* ================= SECTION BASE ================= */

        section {
            padding: 120px 0;
        }

        section h2 {
            font-size: 2.4rem;
            text-align: center;
            margin-bottom: 20px;
        }

        section>p {
            max-width: 700px;
            margin: 0 auto 70px;
            text-align: center;
            color: var(--muted);
            font-size: 1.05rem;
        }

        /* ================= PROBLEMS ================= */

        .grid-4 {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 30px;
        }

        .problem-card {
            background: var(--card);
            padding: 30px;
            border-radius: 16px;
            border: 1px solid var(--border);
        }

        .problem-card img {
            width: 42px;
            margin-bottom: 18px;
        }

        .problem-card h3 {
            margin-bottom: 10px;
        }

        .problem-card p {
            color: var(--muted);
        }

        /* ================= FEATURES ================= */

        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
        }

        .feature {
            display: flex;
            gap: 20px;
        }

        .feature img {
            width: 44px;
            height: 44px;
        }

        .feature h3 {
            margin-bottom: 8px;
        }

        .feature p {
            color: var(--muted);
        }

        /* ================= WORKFLOW ================= */

        .steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 30px;
            text-align: center;
        }

        .step {
            background: linear-gradient(180deg, var(--card), transparent);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 40px 30px;
        }

        .step span {
            font-size: 2rem;
            font-weight: 800;
            color: var(--accent);
        }

        /* ================= USE CASES ================= */

        .use-cases {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 30px;
        }

        .use {
            background: var(--card);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid var(--border);
        }

        /* ================= FAQ ================= */

        .faq {
            max-width: 800px;
            margin: auto;
        }

        .faq-item {
            padding: 20px 0;
            border-bottom: 1px solid var(--border);
        }

        .faq-item h4 {
            margin-bottom: 6px;
        }

        .faq-item p {
            color: var(--muted);
