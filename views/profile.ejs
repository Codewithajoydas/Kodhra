  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profile of <%= user.goodName %> | Code Snippet Manager</title>

  <meta name="description" content="<%= user.bio || user.goodName %>">

  <meta name="keywords" content="
  developer profile,
