                    <%}%>
                </div>
                <div class="user-info">
                  <div class="user-name" style="margin-block: 10px">
                    <h2 style="margin: 0">
                      <%= user.goodName %>
                    </h2>
                    <span style="font-size: 15px; text-transform: capitalize; margin: 0">
                      <%= user.userName%>
                    </span>
                  </div>

                  <% if (user.bio) { %>
                    <div class="bio" style="margin-block: 10px">
                      <p class="add_bio" data-iam="<%= String(user._id)===String(userId) %>" style="cursor: pointer">
                        <%= user.bio %>
                      </p>
                    </div>
                    <% } else { %>
                      <% if(String(user._id)===String(userId)){%>
                        <a href="" class="add_bio ab" data-tooltip="Click to Add Bio"
                          data-iam="<%= String(user._id)===String(userId) %>" style="
                        text-decoration: underline;
                        color: rgb(0, 47, 255);
                        font-size: small;
                        text-transform: lowercase;
                      ">
                          add Bio
                        </a>
                        <%}%>
                          <% } %>

