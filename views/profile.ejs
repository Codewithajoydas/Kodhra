    <script>
      const addLinkss = async () => {
        return fetch("/a")
          .then((res) => res.json())
          .then((data) => data);
      };

      const inputs = [
        document.getElementById("link1"),
        document.getElementById("link2"),
        document.getElementById("link3"),
        document.getElementById("link4"),
      ];

      addLinkss().then((data) => {
        for (let i = 0; i < data.links.length && i < 4; i++) {
          inputs[i].value = data.links[i].url;
          inputs[i].parentElement.querySelector(".delete").style.display =
            "flex";
          inputs[i].parentElement.querySelector(".delete").dataset.id =
            data.links[i]._id;
        }
      });

      document.querySelectorAll(".delete").forEach((ele) => {
        ele.addEventListener("click", (e) => {
          e.stopPropagation();
          deleteFolder("link", e.target.closest("[data-id]").dataset.id);
        });
      });

      const regEx =
        /(http(s)?:\/\/)?(www\.)?[-a-zA-Z0-9@:%._+~#=]{1,256}\.[a-z]{2,10}\b([-a-zA-Z0-9@:%_+.~#?&//=]*)/;

      inputs.forEach((input) => {
        input.addEventListener("input", () => {
          const label = input.closest(".url");
          const isValid = regEx.test(input.value);

          label.style.border = "none";
          label.style.outline = `2px solid ${isValid ? "green" : "red"}`;
          label.style.outlineOffset = "2px";
          label.style.borderRadius = "6px";
        });
      });

      async function saveLinks(e) {
        e.stopPropagation();

        const finalLinks = inputs
          .map((input) => input.value.trim())
          .filter((link) => link !== "");

        if (finalLinks.length === 0) {
          return new Toastmaster({
            title: "Error",
            message: "Please add at least one link",
            type: "error",
            delay: 3000,
          }).showNotification();
        }

        const res = await fetch(`/profile/updateLinks`, {
          method: "post",
          headers: {
            "Content-Type": "application/json",
          },
          credentials: "include",
          body: JSON.stringify({ links: finalLinks }),
        });

        if (res.ok) {
          new Toastmaster({
            title: "Success",
            message: "Links Updated Successfully",
            type: "success",
            delay: 3000,
          }).showNotification();
        } else {
          new Toastmaster({
            title: "Error",
            message: "Something went wrong",
            type: "error",
            delay: 3000,
          }).showNotification();
        }

        addlinks.classList.remove("active");
      }

      const openlink = document.querySelector(".openlink");
      openlink?.addEventListener("click", (e) => {
        e.stopPropagation();
        addlinks.classList.add("active");
      });

      window.addEventListener("click", (e) => {
        if (!addlinks.contains(e.target)) addlinks.classList.remove("active");
      });
    </script>

