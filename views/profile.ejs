          const colorStrings = colors.map(
            (c) => `rgb(${c[0]}, ${c[1]}, ${c[2]})`
          );

          profile_image.style.background = `linear-gradient(
      40deg,
      ${colorStrings[0]},
      ${colorStrings[1]},
      ${colorStrings[2]},
      ${colorStrings[3]},
      ${colorStrings[4]}
    )`;
        }
      };
