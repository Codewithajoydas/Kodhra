    <script>

      const cardsContainer = document.getElementById("cards");
      const sentinelA = document.getElementById("sentinelLoader");

      let currentPage = 1;

      const observerA = new IntersectionObserver(async (entries) => {
        for (let entry of entries) {
          if (entry.isIntersecting) {
            currentPage++;
            let res;
            res = await fetch(`/card/json?page=${currentPage}`);
            const idOfCurrentUser = window.location.pathname.split("/")[3];
            if (idOfCurrentUser) res = await fetch(`/card/json?page=${currentPage}&id=${idOfCurrentUser}`);
            if (res.ok) {
              const html = await res.text();
              if (html.trim()) {
                cardsContainer.insertAdjacentHTML("beforeend", html);
              } else {
                sentinelA.innerHTML = `<p style="color:red">No more cards...</p>`
                observerA.unobserve(sentinelA);
              }
            }
          }
        }
      }, {
        threshold: 0
      });

      observerA.observe(sentinelA);

    </script>

