      menuListEl.innerHTML = "";

      menuItems.forEach((item) => {
        let li = document.createElement("li");
        li.innerHTML = `${icons[item]} ${item}`;
        menuListEl.appendChild(li);
        if (actions[item]) {
          li.addEventListener("click", (ev) => {
            ev.stopPropagation();
            actions[item]();
            context_menu.style.display = "none";
          });
        }
      });
    });
