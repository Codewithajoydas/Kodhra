  <script>
    window.onload = () => {
      let loader = document.querySelector(".loader");
      loader.style.display = "none";
    }
    let lan = document.getElementById("category");
    const modeMap = {
      JavaScript: "javascript",
      C: "text/x-csrc",
      "C++": "text/x-c++src",
      "C#": "text/x-csharp",
      Java: "text/x-java",
      TypeScript: "text/typescript",
      Python: "python",
      Ruby: "ruby",
      PHP: "php",
      Go: "go",
      Rust: "rust",
      Swift: "swift",
      Kotlin: "text/x-kotlin",
      "Objective-C": "text/x-objectivec",
      Scala: "text/x-scala",
      Perl: "perl",
      R: "r",
      Dart: "dart",
      Haskell: "haskell",
      Lua: "lua",
      Elixir: "elixir",
      Clojure: "clojure",
      Shell: "shell",
      PowerShell: "powershell",
      SQL: "sql",
      GraphQL: "graphql",
      MATLAB: "octave", // MATLAB uses octave mode
      Assembly: "gas", // GNU assembly
      Fortran: "fortran",
      COBOL: "cobol",
      Erlang: "erlang",
      "VB.NET": "vb",
      HTML: "htmlmixed",
      CSS: "css",
    };
    let themeRadio = document.querySelector("input[name='theme']:checked");
    let currentTheme = themeRadio ? (themeRadio.value === "light" ? "eclipse" : "ayu-dark") : "ayu-dark";

    const editor = CodeMirror.fromTextArea(document.getElementById("code"), {
      lineNumbers: true,
      mode: modeMap[lan.value],
      lineWrapping: true,
      theme: currentTheme,
    });
    lan.addEventListener("change", function () {
      let val = modeMap[this.value];
      editor.setOption("mode", val);
    });
    document.querySelectorAll("input[name='theme']").forEach((inp) => {
      inp.addEventListener("change", () => {
        const newTheme = inp.value === "light" ? "eclipse" : "ayu-dark";
        editor.setOption("theme", newTheme);
        localStorage.setItem("theme", inp.value); // optional: save preference
      });
    });
  </script>
  <script>
    async function submitData() {
      let title = document.getElementById("title1").value;
      let description = document.getElementById("des").value;
      let category = document.getElementById("category").value;
      let content = (document.getElementById("code").value =
        editor.getValue());
      let folderName = document.getElementById("folderName1").value;
      console.log(title, description, category, content, folderName)
      let tags = document
        .getElementById("tags")
        .value.split(",")
        .map((tag) => tag.trim());
      let loader = document.querySelector(".loading");
      let msgloader = document.querySelector(".loading span");
      loader.style.display = "flex";
      try {
        let startTime = performance.now();
        let res = await fetch("/card", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          credentials: "include",
          body: JSON.stringify({
            title,
            description,
            category,
            content,
            tags,
            folderName,
          }),
        });

        let data = await res.json();
        console.log(data)
        const endTime = performance.now();
        const duration = ((endTime - startTime) / 1000).toFixed(2);
        if (res.ok) {
          loader.style.background = "lightgreen";
          loader.style.display = "flex";
          msgloader.textContent = `🎉 Snippet created in just ${duration}s`;
        } else {
          loader.style.background = "pink";
          loader.style.display = "flex";
          msgloader.textContent = `🚫 Snippet Not Created!`;
        }

        let timeout = setTimeout(() => {
          loader.style.display = "none";
          loader.style.background = "none";
          clearTimeout(timeout);
        }, 3000);
      } catch (err) {
        console.error("Error submitting data:", err);
        loader.style.background = "#ff474c";
        loader.style.display = "flex";
        msgloader.textContent = `🌋 Error submitting data`;
        let timeout = setTimeout(() => {
          loader.style.display = "none";
          clearInterval(timeout);
        }, 3000);
      }
    }
  </script>



